<Window x:Class="FindOpponentWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tìm Đối Thủ" Height="500" Width="800">
    <Grid>
        <StackPanel MaxWidth="800" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <!-- Tiêu đề -->
            <TextBlock FontSize="46" HorizontalAlignment="Center" Margin="0 0 0 30" FontWeight="ExtraBold">
                TÌM ĐỐI THỦ
            </TextBlock>

            <!-- ListBox hiển thị danh sách đối thủ -->
            <ListBox x:Name="OpponentListBox" Margin="10,0,10,20" Height="300">
                <ListBoxItem>Người chơi 1 - Online</ListBoxItem>
                <ListBoxItem>Người chơi 2 - Busy</ListBoxItem>
            </ListBox>

            <!-- Các nút hành động -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="RefreshButton" Content="Làm Mới" Click="RefreshButton_Click" Width="120" Margin="0 0 10 0"/>
                <Button x:Name="InviteButton" Content="Mời Chơi" Click="InviteButton_Click" Width="120"/>
            </StackPanel>
        </StackPanel>

        <!-- Thanh trạng thái -->
        <StatusBar VerticalAlignment="Bottom">
            <TextBlock x:Name="StatusBarText" Text="Sẵn sàng." />
        </StatusBar>
    </Grid>
</Window>
